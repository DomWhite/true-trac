<!DOCTYPE html>
<html>
<head>
  <title>TrueTrac</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/css/materialize.min.css">        
</head>
<body>
  <ul id="dropdown1" class="dropdown-content z-depth-2">
    <li class="waves-effect z-depth-3"><%= link_to 'Twitter', '/auth/twitter', class: 'social twitter' %></li>
    <li class="divider"></li>
    <li class="waves-effect z-depth-3"><%= link_to 'Facebook', '/auth/facebook', class: 'social facebook' %></li>
  </ul>
<div class="navbar-fixed">
  <nav class="z-depth-3">
    <div class="nav-wrapper teal">
      <a href="/" class="brand-logo">TrueTrac</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
      <ul class="right hide-on-med-and-down">
        <li class="waves-effect"><%= link_to 'CHAT', '/chat', class: 'social' %><i class="large mdi-communication-chat right"></i></li>
        <li class="waves-effect"><%= link_to 'MAP', '/map', class: 'social' %><i class="large mdi-action-explore right"></i></li>
        <% if !logged_in? %>
          <li class="waves-effect"><a class="dropdown-button " href="#!" data-activates="dropdown1">SIGN IN<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
         <% else %>
         <li class="waves-effect"><%= link_to 'SIGN OUT', sign_out_path %></li><i class="large mdi-action-exit-to-app right"></i>
        <% end %> 

      </ul>
      <ul class="side-nav teal" id="mobile-demo">
      <div class= "row">
        <li class="waves-effect col s12"><%= link_to 'EXPLORE', '/map', class:"white-text" %></li>
        <li class="waves-effect col s12"><%= link_to 'CHAT', '/chat', class:"white-text"  %></li>
        <% if !logged_in? %>
          <p class= "teal-text white col s12">Sign in with:</p>
          <li class="waves-effect col s6"><%= link_to 'Twitter', '/auth/twitter', class:"white-text"  %></li>
          <li class="waves-effect col s6"><%= link_to 'Facebook', '/auth/facebook', class:"white-text"  %></li>
        <% else %> 
          <li class="waves-effect col s12"><%= link_to 'SIGN OUT', sign_out_path, class:"white-text" %></li>
        <% end %> 
        </div>
      </ul>
    </div>
  </nav>
</div>
 
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>
<main>
    <%= yield %>
</main>
        <footer class="page-footer" style="padding-top:0; margin-top: 0">
          <div class="footer-copyright">
            <div class="container">
            Â© 2015 Dominic White
            <a class="grey-text text-lighten-4 right" href="https://generalassemb.ly/">A General Assembly Project</a>
            </div>
          </div>
        </footer>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>
</body>
</html>
