<!DOCTYPE html>
<html>
<head>
  <title>TrueTrac</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/css/materialize.min.css">        
</head>
<body>
  <ul id="dropdown1" class="dropdown-content">
    <li><%= link_to 'Twitter', '/auth/twitter', class: 'social twitter' %></li>
    <li class="divider"></li>
    <li><%= link_to 'Facebook', '/auth/facebook', class: 'social facebook' %></li>
  </ul>
  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">True Trac</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
      <ul class="right hide-on-med-and-down">
        <li><%= link_to 'CHAT', '/chat', class: 'social' %></li>
        <li><%= link_to 'MAP', '/map', class: 'social' %></li>
        <% if !logged_in? %>
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Sign In<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
         <% else %>
         <li><%= link_to 'SIGN OUT', sign_out_path %></li>
        <% end %> 

      </ul>
      <ul class="side-nav" id="mobile-demo">
        <li><%= link_to 'MAP', '/map', class: 'social' %></li>
        <li><%= link_to 'CHAT', '/chat', class: 'social' %></li>
        <% if !logged_in? %>
          <li style="color: grey">Sign in with:</li>
          <li><%= link_to 'Twitter', '/auth/twitter', class: 'social twitter' %></li>
          <li><%= link_to 'Facebook', '/auth/facebook', class: 'social facebook' %></li>
        <% else %> 
          <li><%= link_to 'SIGN OUT', sign_out_path %></li>
        <% end %> 
      </ul>
    </div>
  </nav>
 
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
 
    <%= yield %>
  </div>


  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>

</body>
</html>
