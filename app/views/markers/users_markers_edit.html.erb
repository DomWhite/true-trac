
<div class="row">
<% @user_markers.each do |marker| %>

        <div class="col s12 m6 l4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= marker.title %></span>
              <p><%= marker.description %></p>
            </div>
            <div class="card-action">
              <%= link_to 'Edit', edit_marker_path(marker), :class => 'blue accent-4 btn'%>
              <%= link_to 'Delete', marker, method: :delete, :class => 'red accent-4 btn' %>
            </div>
          </div>
        </div>

  <% end %>

</div>