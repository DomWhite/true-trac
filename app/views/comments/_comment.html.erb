<li class="media comment">
  <%= link_to image_tag(comment.user.avatar_url, alt: comment.user.name, class: "circle"),
      comment.user.profile_url, target: '_blank', class: 'left' %>
  <div class="media-body">
    <h4 class="media-heading"><small><%= link_to comment.user.name, comment.user.profile_url, target: '_blank' %> says</small></h4>
      <small class="text-muted">[at <%= comment.created_at.strftime('%-d %B %Y, %H:%M:%S') %>]</small>
    <h5><%= comment.body %></h5>
    <%= tag(:div, class: "divider") %>
  </div>
</li>